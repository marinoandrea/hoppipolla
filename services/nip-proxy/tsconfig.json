{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "target": "ES2022",
    "lib": ["ES2022", "ESNext.Disposable"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "paths": {
      "src/*": ["./src/*"],
      "tests/*": ["./__tests__/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./__tests__/**/*.ts",
    "jest.config.js",
    ".eslintrc.config.mjs"
  ],
  "exclude": ["node_modules", "jest_cache"]
}
